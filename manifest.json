{
  "manifest_version": 3,
  "name": "Auto Clear History",
  "version": "1.5",
  "description": "Automatically clears all browsing history periodically.",
  "permissions": ["browsingData", "storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Clear History"
  }
}
